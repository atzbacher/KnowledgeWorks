<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Base brushes -->
  <SolidColorBrush x:Key="AccentBrush" Color="#3D7EFF"/>
  <SolidColorBrush x:Key="AccentBrushLight" Color="#E6F0FF"/>
  <SolidColorBrush x:Key="BorderBrushLight" Color="#FFDDDDDD"/>
  <SolidColorBrush x:Key="TextBrush" Color="#FF1E1E1E"/>

  <!-- Base spacing (use Margin, not 'Spacing' which is not a WPF property) -->
  <Thickness x:Key="GapSmall">6</Thickness>
  <Thickness x:Key="Gap">12</Thickness>
  <Thickness x:Key="GapLarge">20</Thickness>

  <!-- Typography -->
  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
  </Style>

  <!-- Buttons -->
  <Style TargetType="Button">
    <Setter Property="Margin" Value="{StaticResource GapSmall}"/>
    <Setter Property="Padding" Value="8,4"/>
  </Style>

  <!-- TextBox -->
  <Style TargetType="TextBox">
    <Setter Property="Margin" Value="{StaticResource GapSmall}"/>
    <Setter Property="Padding" Value="6,3"/>
  </Style>

  <!-- ComboBox -->
  <Style TargetType="ComboBox">
    <Setter Property="Margin" Value="{StaticResource GapSmall}"/>
    <Setter Property="Padding" Value="6,3"/>
  </Style>

  <!-- GroupBox -->
  <Style TargetType="GroupBox">
    <Setter Property="Margin" Value="{StaticResource Gap}"/>
    <Setter Property="Padding" Value="{StaticResource Gap}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrushLight}"/>
  </Style>

  <!-- DataGrid -->
  <Style TargetType="DataGrid">
    <Setter Property="Margin" Value="{StaticResource Gap}"/>
    <Setter Property="AutoGenerateColumns" Value="False"/>
    <Setter Property="IsReadOnly" Value="True"/>
    <Setter Property="HeadersVisibility" Value="Column"/>
    <Setter Property="GridLinesVisibility" Value="Horizontal"/>
  </Style>
</ResourceDictionary>
