<UserControl x:Class="LM.App.Wpf.Views.Review.Controls.DecisionBadge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syswinControls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
             d:DesignHeight="24"
             d:DesignWidth="120"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Style="{DynamicResource DecisionBadgeStyle}">
  <syswinControls:Border x:Name="BadgeBorder"
                         Background="{DynamicResource ScreeningStatusDefaultBrush}"
                         CornerRadius="4"
                         Padding="6,2">
    <syswinControls:TextBlock x:Name="BadgeText"
                              Text="Pending"
                              Foreground="#FFFFFFFF"
                              FontSize="12"
                              FontWeight="SemiBold" />
  </syswinControls:Border>
</UserControl>
