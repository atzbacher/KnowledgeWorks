<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:syswin="clr-namespace:System.Windows;assembly=PresentationFramework"
                    xmlns:syswinControls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
                    xmlns:syswinMedia="clr-namespace:System.Windows.Media;assembly=PresentationCore"
                    xmlns:reviewModels="clr-namespace:LM.Review.Core.Models;assembly=LM.Review.Core"
                    xmlns:reviewControls="clr-namespace:LM.App.Wpf.Views.Review.Controls">
  <syswinMedia:SolidColorBrush x:Key="ReviewCardBackgroundBrush" Color="#FFFFFFFF" />
  <syswinMedia:SolidColorBrush x:Key="ReviewCardBorderBrush" Color="#E5E7EB" />
  <syswinMedia:SolidColorBrush x:Key="ReviewCardHeaderBrush" Color="#111827" />
  <syswinMedia:SolidColorBrush x:Key="ReviewCardSubduedBrush" Color="#4B5563" />
  <syswinMedia:SolidColorBrush x:Key="ScreeningStatusIncludedBrush" Color="#065F46" />
  <syswinMedia:SolidColorBrush x:Key="ScreeningStatusExcludedBrush" Color="#991B1B" />
  <syswinMedia:SolidColorBrush x:Key="ScreeningStatusPendingBrush" Color="#92400E" />
  <syswinMedia:SolidColorBrush x:Key="ScreeningStatusEscalatedBrush" Color="#1D4ED8" />
  <syswinMedia:SolidColorBrush x:Key="ScreeningStatusDefaultBrush" Color="#374151" />

  <syswin:Thickness x:Key="ReviewSectionCornerRadius">12,12,12,12</syswin:Thickness>
  <syswin:Thickness x:Key="ReviewSectionPadding">20,18,20,18</syswin:Thickness>

  <Style x:Key="ReviewSectionBorderStyle"
         TargetType="{x:Type syswinControls:Border}">
    <Setter Property="Background" Value="{StaticResource ReviewCardBackgroundBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource ReviewCardBorderBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="Padding" Value="{StaticResource ReviewSectionPadding}" />
    <Setter Property="Margin" Value="0,0,0,20" />
  </Style>

  <Style x:Key="ReviewSectionHeaderStyle"
         TargetType="{x:Type syswinControls:TextBlock}">
    <Setter Property="FontSize" Value="18" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{StaticResource ReviewCardHeaderBrush}" />
  </Style>

  <Style x:Key="ReviewSectionSubheaderStyle"
         TargetType="{x:Type syswinControls:TextBlock}">
    <Setter Property="Margin" Value="0,6,0,0" />
    <Setter Property="Foreground" Value="{StaticResource ReviewCardSubduedBrush}" />
  </Style>

  <Style TargetType="{x:Type reviewControls:DecisionBadge}" x:Key="DecisionBadgeStyle">
    <Setter Property="Margin" Value="0,0,8,0" />
    <Setter Property="Padding" Value="6,2" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <DataTemplate x:Key="ReviewStageSummaryTemplate"
                DataType="{x:Type reviewModels:ReviewStage}">
    <syswinControls:Border Style="{StaticResource ReviewSectionBorderStyle}"
                           Margin="0,0,20,0">
      <syswinControls:StackPanel>
        <syswinControls:TextBlock Text="{Binding Definition.Name}" Style="{StaticResource ReviewSectionHeaderStyle}" />
        <syswinControls:TextBlock Text="{Binding ConflictState}" Style="{StaticResource ReviewSectionSubheaderStyle}" />
        <syswinControls:StackPanel Orientation="Horizontal" Margin="0,12,0,0">
          <syswinControls:TextBlock Text="Assignments:" FontWeight="SemiBold" />
          <syswinControls:TextBlock Text="{Binding Assignments.Count}" Margin="8,0,0,0" />
        </syswinControls:StackPanel>
      </syswinControls:StackPanel>
    </syswinControls:Border>
  </DataTemplate>

  <DataTemplate x:Key="ScreeningAssignmentItemTemplate"
                DataType="{x:Type reviewModels:ScreeningAssignment}">
    <syswinControls:Border BorderBrush="#E5E7EB"
                           BorderThickness="0,0,0,1"
                           Padding="0,12,0,12">
      <syswinControls:StackPanel>
        <syswinControls:StackPanel Orientation="Horizontal" VerticalAlignment="Center">
          <reviewControls:DecisionBadge Status="{Binding Status}" />
          <syswinControls:TextBlock Text="{Binding ReviewerId}" FontWeight="SemiBold" />
          <syswinControls:TextBlock Text="{Binding Role}" Margin="12,0,0,0" Foreground="{StaticResource ReviewCardSubduedBrush}" />
        </syswinControls:StackPanel>
        <syswinControls:StackPanel Orientation="Horizontal" Margin="0,6,0,0">
          <syswinControls:TextBlock Text="Assigned" FontWeight="SemiBold" />
          <syswinControls:TextBlock Text="{Binding AssignedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Margin="8,0,0,0" />
        </syswinControls:StackPanel>
        <syswinControls:StackPanel Orientation="Horizontal" Margin="0,4,0,0">
          <syswinControls:TextBlock Text="Completed" FontWeight="SemiBold" />
          <syswinControls:TextBlock Text="{Binding CompletedAt, TargetNullValue=Pending, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Margin="8,0,0,0" />
        </syswinControls:StackPanel>
      </syswinControls:StackPanel>
    </syswinControls:Border>
  </DataTemplate>
</ResourceDictionary>
