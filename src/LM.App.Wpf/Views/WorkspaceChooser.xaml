<Window x:Class="LM.App.Wpf.Views.WorkspaceChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Workspace" Height="210" Width="640"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Select the workspace folder (shared on OneDrive/SharePoint)." Margin="0,0,0,8"/>
            <DockPanel>
                <TextBox x:Name="PathBox" Margin="0,0,8,0"/>
                <Button Content="Browse..." Click="OnBrowse"/>
            </DockPanel>

            <!-- NEW: debug switch -->
            <CheckBox x:Name="DebugDumpCheck"
                Margin="0,8,0,0"
                Content="Write staging debug dumps to &quot;_debug\staging&quot;" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="90" IsDefault="True" Click="OnOk"/>
            <Button Content="Cancel" Width="90" Margin="8,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

