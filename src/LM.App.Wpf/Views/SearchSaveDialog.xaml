<Window x:Class="LM.App.Wpf.Views.SearchSaveDialog"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:LM.App.Wpf.Views.Behaviors"
        Title="{Binding Title}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        MinWidth="420"
        FocusManager.FocusedElement="{Binding ElementName=NameBox}">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="8" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="12" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="8" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="8" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="12" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <TextBlock Grid.Row="0"
               Grid.ColumnSpan="2"
               Text="Name this search run and capture any notes."
               FontWeight="SemiBold" />

    <TextBlock Grid.Row="2"
               Grid.Column="0"
               Margin="0,0,8,4"
               Text="Query:" />
    <TextBlock Grid.Row="2"
               Grid.Column="1"
               TextWrapping="Wrap"
               Text="{Binding Query}" />

    <TextBlock Grid.Row="3"
               Grid.Column="0"
               Margin="0,0,8,4"
               Text="Database:" />
    <TextBlock Grid.Row="3"
               Grid.Column="1"
               Text="{Binding Database}" />

    <TextBlock Grid.Row="4"
               Grid.Column="0"
               Margin="0,0,8,0"
               Text="Range:" />
    <TextBlock Grid.Row="4"
               Grid.Column="1"
               Text="{Binding Range}" />

    <TextBlock Grid.Row="6"
               Grid.Column="0"
               Margin="0,0,8,0"
               Text="Name:"
               VerticalAlignment="Center" />
    <TextBox x:Name="NameBox"
             Grid.Row="6"
             Grid.Column="1"
             MinWidth="240"
             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}">
      <i:Interaction.Behaviors>
        <behaviors:SelectAllTextOnFocusBehavior />
      </i:Interaction.Behaviors>
    </TextBox>

    <TextBlock Grid.Row="8"
               Grid.Column="0"
               Margin="0,0,8,0"
               Text="Tags:" />
    <TextBox Grid.Row="8"
             Grid.Column="1"
             MinWidth="240"
             Text="{Binding Tags, UpdateSourceTrigger=PropertyChanged}"
             ToolTip="Comma or semicolon separated tags" />

    <TextBlock Grid.Row="10"
               Grid.ColumnSpan="2"
               Text="Notes:" />
    <TextBox Grid.Row="11"
             Grid.ColumnSpan="2"
             Margin="0,4,0,0"
             AcceptsReturn="True"
             TextWrapping="Wrap"
             Height="140"
             VerticalScrollBarVisibility="Auto"
             Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" />

    <StackPanel Grid.Row="13"
                Grid.ColumnSpan="2"
                Style="{StaticResource DialogButtonPanelStyle}">
      <Button Content="Cancel"
              Style="{StaticResource DialogCancelButtonStyle}"
              Command="{Binding CancelCommand}" />
      <Button Content="Save"
              Style="{StaticResource DialogPrimaryButtonStyle}"
              Command="{Binding SaveCommand}" />
    </StackPanel>
  </Grid>
</Window>
